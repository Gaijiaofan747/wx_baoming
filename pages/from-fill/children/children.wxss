/* pages/from-fill/children/children.wxss */

@import '/pages/mine/information-editing/information-editing.wxss';

.figure{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    width: 100%;
    line-height: 40rpx;
    color: rgba(16, 16, 16, 1);
    font-size: 28rpx;
    font-family: PingFangSC-regular; 
    margin-left: 6rpx;
}

.figure text{
    -webkit-box-flex:1 ;
        -ms-flex:1 ;
            flex:1 ;
    text-align: center;
}

.figure text:nth-of-type(1){
    text-align: left;
}

.item-picker{
    padding: 21rpx 0 21rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}

.input-box .picker{
    display: inline-block;
    width: 33%;
    height: 48rpx;
    text-align: center;
    line-height: 48rpx;
    color: #929292;
    font-size: 28rpx;
}

.input-box .picker-input,.input-box .picker-input{
    border-right: 2rpx solid #bbb;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}

.item-sex label{
    width: 250rpx;
    margin-left: 0;
}

.input-item .input-box .session{
    display: inline-block;
    width: 100%;
    height: 48rpx;
    text-align: center;
    line-height: 48rpx;
    color: #101010;
    font-size: 28rpx;
    border:none;
}
